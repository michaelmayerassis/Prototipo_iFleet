<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo3"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="681dp"
        android:background="#B00A0A0A"
        android:textColor="#fff"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42" />

    <Button
        android:id="@+id/btnViagem"
        android:layout_width="165dp"
        android:layout_height="100dp"
        android:layout_marginTop="122dp"
        android:layout_marginBottom="84dp"
        android:onClick="click"
        android:text="@string/buscar_viagem"
        app:layout_constraintBottom_toTopOf="@+id/btnRastrear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLogin" />

    <Button
        android:id="@+id/btnRastrear"
        android:layout_width="165dp"
        android:layout_height="100dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="223dp"
        android:text="@string/rastrear_veiculo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnViagem" />

</androidx.constraintlayout.widget.ConstraintLayout>